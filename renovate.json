{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitsDisabled"
  ],
  "labels": [
    "Renovate"
  ],
  "rebaseWhen": "conflicted",
  "regexManagers": [
    {
      "fileMatch": ["^settings\\.gradle\\.kts$"],
      "matchStrings": [
        "version\\(\\s*\"minestom\"\\s*,\\s*\"(?<currentValue>[0-9a-f]{7,40})\"\\s*\\)"
      ],
      "datasourceTemplate": "git-refs",
      "packageNameTemplate": "https://github.com/Minestom/Minestom",
      "depNameTemplate": "Minestom/Minestom",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": ["regex"],
      "matchPackageNames": ["net.minestom:minestom-snapshots"],
      "automerge": true
    }
  ]
}
